<odoo>
  <!-- Ocultar Ãºnicamente el tipo de producto -->
  <record id="product_template_hide_detailed_type" model="ir.ui.view">
    <field name="name">product.template.hide.detailed.type.only</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <!-- prioridad alta para que aplique siempre -->
    <field name="priority">50</field>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='detailed_type']" position="attributes">
        <attribute name="invisible">1</attribute>
        <attribute name="modifiers">{ "invisible": true }</attribute>
      </xpath>
    </field>
  </record>
</odoo>
