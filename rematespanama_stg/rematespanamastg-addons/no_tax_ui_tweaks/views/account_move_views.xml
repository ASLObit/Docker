<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Ocultar impuestos en líneas de factura (árbol y formulario) -->
  <record id="view_move_line_tree_no_tax" model="ir.ui.view">
    <field name="name">account.move.line.tree.no.tax</field>
    <field name="model">account.move.line</field>
    <field name="inherit_id" ref="account.view_move_line_tree"/>
    <field name="priority">50</field>
    <field name="arch" type="xml">
      <field name="tax_ids" position="replace">
        <field name="tax_ids" invisible="1"/>
      </field>
    </field>
  </record>

  <record id="view_move_line_form_no_tax" model="ir.ui.view">
    <field name="name">account.move.line.form.no.tax</field>
    <field name="model">account.move.line</field>
    <field name="inherit_id" ref="account.view_move_line_form"/>
    <field name="priority">50</field>
    <field name="arch" type="xml">
      <field name="tax_ids" position="replace">
        <field name="tax_ids" invisible="1"/>
      </field>
    </field>
  </record>
</odoo>
