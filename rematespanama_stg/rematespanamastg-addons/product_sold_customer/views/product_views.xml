<odoo>
  <record id="view_product_template_form_inherit_sold" model="ir.ui.view">
    <field name="name">product.template.form.sold.customer</field>
    <field name="model">product.template</field>
    <!-- Usa la vista de formulario de template -->
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <!-- Inserta botÃ³n en la caja de smart buttons -->
      <xpath expr="//div[@name='button_box']" position="inside">
        <button type="object"
                name="action_open_sold_moves"
                class="oe_stat_button"
                icon="fa-shopping-cart"
                attrs="{'invisible': [('type','=','service')]}">
          <field name="sold_qty" string="Vendidas" widget="statinfo"/>
        </button>
      </xpath>
    </field>
  </record>
</odoo>
