<odoo>
  <!-- Ocultar pestañas Ventas e Inventario -->
  <record id="view_product_template_hide_tabs" model="ir.ui.view">
    <field name="name">product.template.hide.tabs</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">

      <!-- Las páginas suelen tener name="sales" y name="inventory" -->
      <xpath expr="//page[@name='sales']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//page[@name='inventory']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <!-- Ocultar stat “Reglas de reordenamiento” -->
      <xpath expr="//button[@name='action_open_reordering_rules']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <!-- Ocultar stat “Entrada / Salida” (abre movimientos) -->
      <xpath expr="//button[@name='action_view_stock_moves']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

    </field>
  </record>
</odoo>
