<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Ocultar "Tipo de producto", Impuesto ventas y compras -->
  <record id="view_product_template_no_tax_hide" model="ir.ui.view">
    <field name="name">product.template.no.tax.hide</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="priority">50</field>
    <field name="arch" type="xml">
      <!-- Tipo de producto -->
      <field name="detailed_type" position="replace">
        <field name="detailed_type" invisible="1"/>
      </field>
      <!-- Impuestos de ventas -->
      <field name="taxes_id" position="replace">
        <field name="taxes_id" invisible="1"/>
      </field>
      <!-- Impuestos de compra -->
      <field name="supplier_taxes_id" position="replace">
        <field name="supplier_taxes_id" invisible="1"/>
      </field>
    </field>
  </record>
</odoo>
